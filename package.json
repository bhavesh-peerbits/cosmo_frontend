{
	"name": "cosmo",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"app",
		"server",
		"packages/*"
	],
	"scripts": {
		"dev:server": "yarn workspace server dev",
		"dev:app": "yarn workspace app dev",
		"build:server": "yarn workspace server build",
		"build:app": "yarn workspace app build",
		"build": "yarn workspaces foreach -pt run build",
		"lint": "yarn lint:format && yarn lint:fix && yarn workspaces foreach -pt run comm:tsc",
		"lint:stylelint": "stylelint --cache --fix --ignore-path .gitignore '**/*.[s]css'",
		"lint:fix": "yarn lint:stylelint && yarn eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx .",
		"lint:format": "prettier -uw . ",
		"test": "yarn workspaces foreach -pt run test:ci",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@types/node": "^17.0.41",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"@yarnpkg/fslib": "^3.0.0-rc.2",
		"@yarnpkg/libzip": "^3.0.0-rc.2",
		"c8": "^7.11.3",
		"eslint": "^8.17.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"eslint-plugin-testing-library": "^5.5.1",
		"husky": "^8.0.1",
		"jsdom": "^19.0.0",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"stylelint": "^14.8.5",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-standard-scss": "^4.0.0",
		"ts-node": "^10.8.1",
		"typescript": "4.6.4",
		"vite": "^3.0.5"
	},
	"lint-staged": {
		"**/*.+(js|jsx|ts|tsx|json|css)": [
			"yarn lint"
		]
	},
	"prettier": "./.prettierrc.js",
	"packageManager": "yarn@3.2.0",
	"dependenciesMeta": {
		"open@7.4.2": {
			"unplugged": true
		},
		"open@8.4.0": {
			"unplugged": true
		}
	}
}
