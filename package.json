{
	"name": "cosmo",
	"private": true,
	"workspaces": [
		"packages/*",
		"app",
		"server"
	],
	"scripts": {
		"dev:server": "yarn workspace server dev",
		"dev:app": "yarn workspace app dev",
		"build:server": "yarn workspace server build",
		"build:app": "yarn workspace app build",
		"build": "yarn workspaces foreach -pt run build",
		"lint": "yarn lint:format && yarn lint:fix && yarn workspaces foreach -pt run comm:tsc",
		"lint:stylelint": "stylelint --cache --fix --ignore-path .gitignore '**/*.[s]css'",
		"lint:fix": "yarn lint:stylelint && yarn eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx .",
		"lint:format": "prettier -uw . ",
		"test": "yarn workspaces foreach -pt run test:ci"
	},
	"devDependencies": {
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"c8": "^7.11.0",
		"eslint": "^8.13.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"eslint-plugin-testing-library": "^5.3.1",
		"husky": "^7.0.4",
		"jsdom": "^19.0.0",
		"lint-staged": "^12.3.7",
		"prettier": "^2.5.1",
		"prettier-plugin-tailwindcss": "^0.1.8",
		"stylelint": "^14.6.0",
		"stylelint-config-prettier-scss": "^0.0.1",
		"stylelint-config-standard-scss": "^3.0.0",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"vite": "^2.9.1"
	},
	"lint-staged": {
		"**/*.+(js|jsx|ts|tsx|json|css)": [
			"yarn lint"
		]
	},
	"version": "1.0.0",
	"packageManager": "yarn@3.2.0"
}
