{
	"name": "cosmo",
	"private": true,
	"workspaces": [
		"app",
		"server"
	],
	"scripts": {
		"dev:server": "yarn workspace server dev",
		"dev:app": "yarn workspace app dev",
		"build:server": "yarn workspace server build",
		"build:app": "yarn workspace app build",
		"build": "yarn workspaces foreach -ptR run build",
		"prepare": "yarn-deduplicate yarn.lock",
		"postinstall": "patch-package",
		"lint:format": "prettier -uw . ",
		"lint": "yarn lint:format && yarn workspaces foreach -ptR run lint",
		"test": "yarn workspaces foreach -ptR test:ci"
	},
	"dependencies": {
		"validator": "^13.7.0"
	},
	"devDependencies": {
		"@nabla/vite-plugin-eslint": "^1.4.0",
		"@types/validator": "^13.7.1",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"esbuild": "^0.14.29",
		"esbuild-register": "^3.3.2",
		"eslint": "^8.11.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^16.1.2",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-storybook": "^0.5.7",
		"eslint-plugin-testing-library": "^5.1.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"patch-package": "^6.4.7",
		"pre-commit": "^1.2.2",
		"prettier": "^2.5.1",
		"prettier-plugin-tailwindcss": "^0.1.8",
		"typescript": "^4.6.3",
		"vite": "^2.9.1",
		"vite-tsconfig-paths": "^3.4.1"
	},
	"lint-staged": {
		"**/*.+(js|jsx|ts|tsx|json|css)": [
			"yarn lint"
		]
	},
	"version": "0.0.0",
	"packageManager": "yarn@3.2.0"
}
